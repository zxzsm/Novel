
@using Novel.Common
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="baidu-site-verification" content="BU3OVsxuwT" />
    <title>@ViewData["Title"]</title>
    <meta name="robots" content="all">
    <meta name="googlebot" content="all">
    <meta name="baiduspider" content="all">
    <meta name="keywords" content="@Html.Raw(ViewData["keywords"])" />
    <meta name="description" content="@Html.Raw(ViewData["description"])">
    <meta name="viewport" content="width=device-width,height=device-height,initial-scale=1.0,user-scalable=no,minimum-scale=1.0,maximum-scale=1.0" />
    <link href="~/css/index.css?v=@CssVersion.M_Index_Ver" rel="stylesheet" />
    <link href="~/css/common.css?v=@CssVersion.M_Common_Ver" rel="stylesheet" />
    <link href="~/css/common-item.css?v=@CssVersion.M_CommonItem_Ver" rel="stylesheet" />
    <link href="~/css/pure-min.css" rel="stylesheet" />
    <script>
        var _hmt = _hmt || [];
        (function () {
            var hm = document.createElement("script");
            hm.src = "https://hm.baidu.com/hm.js?dceacf47722dcdb7fb8077426895514c";
            var s = document.getElementsByTagName("script")[0];
            s.parentNode.insertBefore(hm, s);
        })();
    </script>
    <style>
        .nav-a{
            display:inline-block;
            width:30%;
            margin-top:10px;
        }
            .nav-a img {
                width: 50px;
                margin: 0 auto;
                display: list-item;
            }
        .nav-h {
            margin: 0px;
            text-align: center;
        }
    </style>

</head>
<body>
    <div class="container " id="container">

        <div class="pure-g" id="header">
            <div class="pure-u-2-3 ">
                <a href="/" class="logo">
                    书客来
                </a>
            </div>
            <div class="pure-u-1-3">

                <a class="rt" style="float:right;" href="@Url.Action("BookShelf")">
                    <img src="~/files/shujia.png" style="width:100%" />
                </a>
                <a class="rt" style="float:right;" href="/">
                    <img src="~/files/home.png" style="width:100%" />
                </a>
                <a class="rt" style="float:right;" href="@Url.Action("BookShelf")">
                    <img src="~/files/login.png" style="width:100%" />
                </a>
            </div>
        </div>
        <div class="pure-g">
            <div class="pure-u-1 pure-u-md-1">
                @using (Html.BeginForm("Search", "Index", FormMethod.Get, new { style = "margin:1%;", @class = "pure-form", id = "headsearch" }))
                {
                    @Html.TextBox("keyword", null, new { @class = "pure-u-1" });
                }
            </div>
        </div>
        <div class="pure-g">
            <div class="pure-u-1">
                <a href="/" class="nav-a">
                    <img src="~/files/fenlei.png" />
                    <h4 class="nav-h">分类</h4>
                </a>
                <a href="/" class="nav-a">
                    <img src="~/files/phb.png" />
                    <h4 class="nav-h">排行榜</h4>
                </a>
                <a href="/" class="nav-a">
                    <img src="~/files/sc.png" />
                    <h4 class="nav-h">收藏榜</h4>
                </a>
            </div>
        </div>
        <div class="body">
            @RenderBody()
        </div>
        <footer class="border-top footer text-muted" id="footer">
            <div class="footer" style="">
                <p>Copyright © 2019 书客来 m.shukelai.com</p>
                <p>如有需要请联系:zxzsm@163.com</p>
            </div>
        </footer>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
