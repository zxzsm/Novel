<!DOCTYPE html>

<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <meta name="baidu-site-verification" content="BU3OVsxuwT" />
    <meta name="baidu_union_verify" content="4cc2a05da4cf99eb06d2c5ab2f93ce39">
    <meta name="robots" content="all">
    <meta name="googlebot" content="all">
    <meta name="baiduspider" content="all">
    <meta name="keywords" content="@Html.Raw(ViewData[" keywords"])" />
    <meta name="description" content="@Html.Raw(ViewData[" description"])">
    <meta http-equiv="mobile-agent" content="format=wml; url=@Html.Raw(ViewData[" mobileurl"])">
    <meta http-equiv="mobile-agent" content="format=xhtml; url=@Html.Raw(ViewData[" mobileurl"])">
    <meta http-equiv="mobile-agent" content="format=html5; url=@Html.Raw(ViewData[" mobileurl"])">
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
</head>
<body>
    <div id="sticky-wrapper" class="sticky-wrapper" style="height: 74px;">
        <div class="header">
            <div class="container">
                <div class="row">
                    <div class="col-md-2 col-sm-4 col-xs-6">
                        <div class="icon">
                            <a href="#"><img src="/files/logo.png" alt="书客来" style="height:70px;"></a>
                        </div>
                    </div>
                    <div class="col-md-10 col-sm-8 col-xs-12">

                        <div class="row">
                            <div class="col-md-8">
                                <form class="form-horizontal pdt10">
                                    <div class="form-group">
                                        <div class="col-sm-7">
                                            <input type="text" class="form-control" placeholder="书名" />
                                        </div>
                                        <div class="col-sm-2">
                                            <button type="submit" class="btn btn-default">查询</button>
                                        </div>
                                    </div>

                                </form>
                            </div>
                            <div class="col-md-4">
                                <div id="navigation">
                                    <ul>
                                        <li><a href="faq.html" class="animsition-link" title="登陆">登陆</a></li>
                                        <li><a href="#contact" title="注册">注册</a></li>
                                        <li><a href="#about" title="我的书架">我的书架</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
