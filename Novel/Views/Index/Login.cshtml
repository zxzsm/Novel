
@{
    ViewData["Title"] = "登陆";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form class="pure-form" method="post" action="@Url.Action("Sign")">
    <fieldset>
        <legend>登陆</legend>

        <input type="text" placeholder="用户名" name="UserName">
