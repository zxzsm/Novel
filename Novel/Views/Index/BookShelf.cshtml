@using Novel.Entity
@using Novel.Entity.ViewModels
@{
    ViewData["Title"] = "我的书架";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .cr {
        color: orangered;
    }
    .pure-table tr td a {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>
<div class="pure-g btitle fr">
    <div class="pure-u-1">
        <h2 class="content-subhead">我的书架</h2>
    </div>
    @{ var mybookShelves = ViewData["BookShelves"] as PaginatedList<MyBookShelfViewModel>;}
    @if (mybookShelves != null)
    {
        foreach (var item in mybookShelves)
        {
            <div class="pure-u-1-4">
                <div class="novel">
                    <a href="@Url.Action("Novel",new { id=item.bookid })" alt="@item.bookname">
                        <img class="img" src="@item.bookimage">
                    </a>
                    <p class="title">
                        <a href="@Url.Action("Novel",new { id=item.bookid })">
                            @item.bookname
                        </a>
                        <br />
                        <span class="author">@item.bookauthor</span>
                    </p>
                </div>
            </div>
        }
    }




    <div class="pure-u-1">
        <h2 class="content-subhead">最近阅读</h2>
        <table class="pure-table  pure-table-bordered" style="width:100%;">
            <thead>
                <tr>
                    <th><input type="checkbox" /></th>
                    <th style="width:28%;">书名</th>
                    <th style="width:30%">阅读进度</th>
                    <th style="width:30%">最近更新章节</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewData["HistoryReadBooks"] as List<BookReadViewModel>)
                {

                    <tr>
                        <td><input type="checkbox" data-id="@item.bookid" /></td>
                        <td><a href="@item.bookurl"> @item.bookname</a>(<small class="cr">@item.bookauthor</small>) </td>
                        <td><a href="@item.currentitemurl">@item.currentitemname</a></td>
                        <td><a href="@item.lasitemurl">@item.lastitemname</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

